<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>


<% if current_user and not current_user.contacts.empty?%>
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Number</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <%current_user.contacts.each do |contact| %>
          <tr>
            <td><%= link_to contact.name, contact %></td>
            <td><%= contact.number %></td>
            <td><%= contact.email %></td>
            <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
            <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%elsif current_user%>
       You dont have any contacts!
    <%= link_to 'New Contact', new_contact_path%>
       <% else %>
      You need to be signed in to see contacts!
      <%= link_to 'Create an account', signup_path %>
      <% end %>


<br>


